<h5 class="header">Game <%= game.id %></h5>
<div class="row">
  <div class="col s12 m12">
    <div class="card blue-grey darken-1 z-depth-2">
      <div class="card-content white-text">
        <span class="card-title">Players</span>
        <p class='flow-text'>
          <%= game.users.map do |user|
            link_to user.slack_user_name, user_path(user.slack_user_name), class: 'player-card-link'
          end .join(', ').html_safe %>
        </p>
      </div>
    </div>
  </div>
</div>
